{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [
      "es2016",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./dist/typings/",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./src/**/*",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}